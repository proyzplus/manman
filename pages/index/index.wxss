 .xin {
   width: 100%;
   height: auto;
 }

 .xin .title {
   font-size: 14px;
   color: #444;
 }

 .xin .border {
   height: 0;
   border-top: 1px solid #ccc;
   margin-top: 20px;
   width: 20%;
 }

 .xin-list {
   width: 100%;
   position: relative;
 }

 .xin-list .single:nth-of-type(1) {
   z-index: 10;
 }

 .xin-list .single:nth-of-type(n+4) {
   transform: translateX(40px) scale(0.6);
   transform-origin: 100% 50% 0;
 }

 .xin-list .single {
   transition: all 1s;
   overflow: hidden;
   border-radius: 4px;
   margin-top: 15px;
   width: calc(100% - 60px);
   height: auto;
   padding-bottom: 8px;
   background: #fff;
   position: absolute;
   box-shadow: 3px 3px 10px 0px #777;
 }

 .clickbutton {
   width: 140px;
   height: 36px;
   margin: auto;
   margin-top: 6px;
   text-align: center;
   color: #fff;
   line-height: 36px;
   border-radius: 4px;
   background-color: #44475c;
 }

 .boxTitle {
   width: 90%;
   height: 120px;
   margin: auto;
   border-radius: 6px;
   border: 1px solid lightgray;
