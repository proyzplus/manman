<i-steps current="{{current}}">
      <i-step>
            <view slot="title">基本信息</view>
            <view slot="content">这里是填写基本信息</view>
      </i-step>
      <i-step>
            <view slot="title">文章内容</view>
            <view slot="content">这里是填写文章内容</view>
      </i-step>
</i-steps>
<view class="editBox">
      <view wx:if="{{current == 0}}" class="basicInfo">
            <i-input value="{{ title }}" title="文章标题" bind:blur="titleEdit" autofocus placeholder="请输入文章标题(最多20字)" maxlength="50" />
            <i-input value="{{ introduction }}" type="textarea" bind:blur="introEdit" title="文章简介" placeholder="请输入文章简介(最多100字)" maxlength="100" />
            <view class="updateImg">
                  <view style="display:flex;flex-wrap;wrap;">
                        <text class="actileImg">选择首页图</text>
                        <button class="updaimg" bindtap="updateimg">上传照片</button>
                  </view>
                  <view class="actile_img">
                        <image class='my_img' mode='widthFix' src="{{actile_img}}" />
                  </view>
            </view>
            <button class="updaimg" bindtap="handleClick">下一步</button>
      </view>
      <view wx:if="{{current == 1}}">
            <view class="page-body">
                  <view class='wrapper'>
                        <editor id="editor" class="ql-container" placeholder="请输入文本或者插入图片" showImgSize showImgToolbar showImgResize bindinput="getEditorValue" bindready="onEditorReady"></editor>
                        <view class='toolbar' bindtap="format">
                              <i class="iconfont icon-zitijiacu {{formats.bold ? 'ql-active' : ''}}" data-name="bold"></i>
                              <i class="iconfont icon-zitixieti {{formats.italic ? 'ql-active' : ''}}" data-name="italic"></i>
                              <i class="iconfont icon-zitishanchuxian {{formats.strike ? 'ql-active' : ''}}" data-name="strike"></i>
                              <i class="iconfont icon-outdent" data-name="indent" data-value="-1"></i>
                              <i class="iconfont icon-indent" data-name="indent" data-value="+1"></i>
                              <i class="iconfont icon-fengexian" bindtap="insertDivider"></i>
                              <i class="iconfont icon-charutupian" bindtap="insertImage"></i>
                              <i class="iconfont icon--checklist" data-name="list" data-value="check"></i>
                              <i class="iconfont icon-youxupailie {{formats.list === 'ordered' ? 'ql-active' : ''}}" data-name="list" data-value="ordered"></i>
                              <!-- <i class="iconfont icon-wuxupailie {{formats.list === 'bullet' ? 'ql-active' : ''}}" data-name="list" data-value="bullet"></i> -->
                        </view>
                  </view>
            </view>
            <view style="display:flex;margin-top:20px;margin-bottom:20px;">
                  <button class="tosece" bindtap="handToSence">上一步</button>
                  <button class="next" bindtap="clickShowText">提交</button>
            </view>
      </view>
</view>