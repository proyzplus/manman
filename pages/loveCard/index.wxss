.cardListStyle {
      width: 100%;
      height: 100%;
}

.card-tabar {
      width: 96%;
      border-radius: 8rpx;
      margin: auto;
      margin-bottom: 12rpx;
      background-color: #fff;
      /* background: linear-gradient(269deg, rgba(208, 230, 13, 0.6) 50%, #FFA200, #ff6900); */
}

.card-back {
      width: 100%;
      margin: auto;
      text-align: center;
}

.card-back image {
      width: 96%;
      height: 380rpx;
      margin: 12rpx;
      margin-bottom: 0rpx;
      border-radius: 8rpx;
}

.card-word {
      width: 100%;
      text-align: center;
      color: #ff6900;
      font-weight: 600;
      flex-flow: row;
      letter-spacing: 4rpx;
      line-height: 80rpx;
      font-size: 32rpx;
}

.timeNow {
      width: 80%;
      margin: auto;
      height: 56rpx;
      display: flex;
      justify-content: space-between;
}

.line {
      width: 40%;
      height: 2rpx;
      background-color: crimson;
      margin-top: 28rpx;
}

.lastMitune {
      width: 100%;
      text-align: center;
      line-height: 68rpx;
      color: gray;
      letter-spacing: 3rpx;
}

.border-mitune {
      width: 448rpx;
      height: 48rpx;
      line-height: 48rpx;
      margin: auto;
      border: 1px solid #fb9306;
      border-radius: 8rpx;
      text-align: center;
      letter-spacing: 2rpx; 
}