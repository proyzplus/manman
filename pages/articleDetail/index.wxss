@import "../../wxParse/wxParse.wxss";

.headtop {
      width: 100%;
      display: flex;
      justify-content: space-between;
}

.userImg {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      margin-top: 8px;
      margin-bottom: 10px;
}

.userName {
      line-height: 48px;
      padding-left: 8px;
      font-size: 16px;
}

.time {
      font-size: 10px;
      line-height: 48px;
}

.activeHeader {
      width: 100%;
}

.activeHeader .title {
      font-weight: 600;
      font-size: 48rpx;
      color: black;
}


.comments {
      width: 100%;
      /* height: 48rpx; */
}

.comments input {
      width: 98%;
      height: 48rpx;
      line-height: 48rpx;
      border: 1px solid lightgray;
      border-radius: 8rpx;
      text-indent: 8rpx;
}