.msc-mask-layer {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      /* background-color: rgba(0, 0, 0, 0.8); */
      background-repeat: no-repeat;
      background-size: cover;
      opacity: 1;
}

.userInfo {
      width: 92%;
      margin: auto;
      display: flex;
      justify-content: space-between;
}

.userAvatar {
      text-align: center;
}

.userAvatar image {
      width: 100rpx;
      height: 100rpx;
      border-radius: 50%;
      border: 1px solid #f3b9ab;
}


.bottomMiddleHeaderView {
      width: 256rpx;
      height: 256rpx;
      border-radius: 50%;
      background-color: none !important;
      font-size: 24rpx;
      margin: auto;
      margin-top: 320rpx;
}

.bottomMiddleHeaderView image {
      width: 230rpx;
      height: 230rpx;
}

button::after {
      border: none;
}

.datetime {
      width: 100%;
      margin-top: 12rpx;
      margin-bottom: 12rpx;
      text-align: center;
      color: #fff;
}

.times {
      text-align: center;
      letter-spacing: 4rpx;
      line-height: 64rpx;
}

.bottomImg {
      width: 240rpx;
      height: 80rpx;
      position: fixed;
      bottom: 48rpx;
      right: 0rpx;
}

.bottomImg image {
      width: 56rpx;
      height: 56rpx;
}

.bottomImg button {
      background: none;
      width: 100rpx;
      display: inline;
}

.popup_content {
      width: 100%;
      height: 100vh;
      background: rgba(0, 0, 0, 0.5);
      position: fixed;
      top: 0;
      left: 0;
}

.popup-box {
      width: 70%;
      background-color: #FFFFFF;
      margin: auto;
      position: fixed;
      top: 32%;
      left: 15%;
      border-radius: 24rpx;
}

.popup_title {
      width: 100%;
      height: 100rpx;
      text-align: center;
      line-height: 100rpx;
      font-size: 36rpx;
      font-weight: 600;
}

.popup_textarea_item {
      width: 96%;
      margin: auto;
      height: 200rpx;
}

.popup_textarea {
      width: 100%;
      height: 100%;
}

.bottom-button {
      width: 100%;
      height: 110rpx;
      margin-top: 24rpx;
      border-top: 1px solid #909399;
      text-align: center;
}


.rightButton {
      width: 100%;
      height: 110rpx;
      border-left: 1px solid #909399;
      font-size: 36rpx;
      font-weight: 400;
      color: #FF6900;
      line-height: 50rpx;
      letter-spacing: 2rpx;
      line-height: 110rpx;
}