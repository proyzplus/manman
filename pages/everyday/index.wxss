.msc-mask-layer {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      /* background-color: rgba(0, 0, 0, 0.8); */
      background-repeat: no-repeat;
      background-size: cover;
      opacity: 1;
}

.userInfo {
      width: 92%;
      height: 105px;
      margin: auto;
      padding-top: 20rpx;
      display: flex;
      justify-content: space-between;
}

.userAvatar {
      text-align: center;
}

.userAvatar image {
      width: 100rpx;
      height: 100rpx;
      border-radius: 50%;
      border: 1px solid #f3b9ab;
}


.bottomMiddleHeaderView {
      width: 256rpx;
      height: 256rpx;
      border-radius: 50%;
      background-color: none !important;
      font-size: 24rpx;
      margin: auto;
      margin-top: 320rpx;
}

.bottomMiddleHeaderView image {
      width: 230rpx;
      height: 230rpx;
}

button::after {
      border: none;
}

.datetime {
      width: 100%;
      margin-top: 12rpx;
      margin-bottom: 12rpx;
      text-align: center;
      color: #fff;
}

.times {
      text-align: center;
      letter-spacing: 4rpx;
      line-height: 64rpx;
}

.bottomImg {
      width: 100%;
      height: 120rpx;
      position: fixed;
      bottom: 24rpx;
      display: flex;
      justify-content: space-around;
}

.tab_list {
      width: 22%;
      height: 120rpx;
      background-color: #fff;
      border-radius: 8rpx;
      text-align: center;
      margin: 0;
      opacity: 0.8;
}

.tab_word {
      font-size: 20rpx;
      color: #fddcdc;
}

.bottomImg image {
      width: 56rpx;
      height: 56rpx;
      margin-top: 16rpx;
}

.popup_content {
      width: 100%;
      height: 100vh;
      background: rgba(0, 0, 0, 0.5);
      position: fixed;
      top: 0;
      left: 0;
}

.popup-box {
      width: 70%;
      background-color: #FFFFFF;
      margin: auto;
      position: fixed;
      top: 32%;
      left: 15%;
      border-radius: 24rpx;
}

.popup_title {
      width: 100%;
      height: 100rpx;
      text-align: center;
      line-height: 100rpx;
      font-size: 36rpx;
      font-weight: 600;
}

.popup_textarea_item {
      width: 96%;
      margin: auto;
      height: 200rpx;
}

.popup_textarea {
      width: 100%;
      height: 100%;
}

.bottom-button {
      width: 100%;
      height: 110rpx;
      margin-top: 24rpx;
      border-top: 1px solid #909399;
      text-align: center;
}


.rightButton {
      width: 100%;
      height: 110rpx;
      border-left: 1px solid #909399;
      font-size: 36rpx;
      font-weight: 400;
      color: #FF6900;
      line-height: 50rpx;
      letter-spacing: 2rpx;
      line-height: 110rpx;
}

.sweetBox {
      width: 100%;
}

.upContent_container {
      width: 100%;
      z-index: 12;
}

.danmu-li {
      padding: 0 20rpx;
      color: #fff;
      position: absolute;
      left: 100%;
      top: 0;
      word-break: keep-all;
      white-space: nowrap;
}

/* 弹幕动画 */

@keyframes dmAnimation {
      from {
            left: 100%;
      }

      to {
            left: -100%;
      }
}