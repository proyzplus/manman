<view class='product-content'>
      <import src="../../wxParse/wxParse.wxml" />
      <view class="wxParse">
            <scroll-view style="height:auto;color:#fff;" scroll-y='true'>
                  <view class="headtop">
                        <view style="display:flex;flex-wrap:wrap;">
                              <image class="userImg" src="{{userInfo.avatarUrl}}"></image>
                              <text class="userName">{{userInfo.nickName}}</text>
                        </view>
                        <text class="time">发布于:{{creatby}}</text>
                  </view>
                  <template style="width: 100%;height: 100%;" is="wxParse" selectable="true" data="{{wxParseData:detail_content.nodes}}" />
            </scroll-view>
      </view>
</view>