.userInfo {
  width: 100%;
  height: 100%;
}

.user-header {
  width: 100%;
  height: 140rpx;
  border-bottom: 1px solid lightgray;
}

.mineInfo {
  width: 100%;
  height: 100%;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
}

.infoImg {
  width: 96rpx;
  height: 96rpx;
  float: left;
  margin: 20rpx 20rpx;
  border-radius: 50%;
}

.infoName {
  width: 60%;
}

.name {
  color: #fff;
  width: 100%;
  margin-top: 20rpx;
  height: 48rpx;
  font-size: 36rpx;
}

.autograph {
  width: 100%;
  height: 64rpx;
  font-size: 20rpx;
  padding-top: 12rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #fff;
}

.loginButton {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  margin: auto;
  background-color: #fff;
  color: #ff6900;
  border-radius: 8rpx;
  border: 2rpx solid #ff6900;
}

.user-function {
  width: 100%;
  margin-top: 16rpx;
}

.iconfont {
  width: 96%;
  background: #fff;
  border-radius: 6px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  margin: auto;
  margin-bottom: 16rpx;
}

.word {
  padding-left: 12rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #635d5d;
  letter-spacing: 4rpx;
}

.listicon {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  margin-left: 12rpx;
}